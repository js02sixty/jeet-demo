@require nib
@require jeet
@require rupture

// Global Variables
$radius = 10px
$radius2 = $radius / 2
$radius3 = $radius / 4

$duration = 400ms

$gray = #c0c0c0ff
$black = #222

body
  background-image: url(../images/zen-wallpaper.jpg)
  padding-top 40px
  +mobile()
    padding-top 0px

.container
  background-color #ffffff66
  box-shadow 0px 0px 8px black
  border-radius $radius
  +mobile()
    center(400px)
    border-radius 0px
    transition-duration $duration
  +tablet()
    center(600px)
    transition-duration $duration
  +desktop()
    center(960px)
    transition-duration $duration

header
footer
  padding 20px

header
  nav
    +tablet()
      display none
    ul
      list-style-type: none;
      margin 0
      padding 0
    li
      display inline
      padding 5px 15px
      margin-right 15px
      border-radius $radius2
      border 1px $black
      box-shadow inset 0px 0px 2px $black
      background linear-gradient(top, white, $black)
    a
      font-size 18px
      color white
      text-decoration none
    a:hover
      color $black

main
  padding 0px 10px
  cf()
  /*edit()*/

#menu
  +tablet()
    column(1/3, gutter:0)
  +desktop()
    column(1/4, gutter:0)

#content
  +tablet()
    column(2/3, gutter:0)
  +desktop()
    column(3/4, gutter:0)

.panel
  text-color $black
  margin 0px 10px 20px
  padding 10px 20px
  background-color $gray
  border-radius $radius2
  box-shadow 0px 0px 3px $black
  +mobile()
    border-radius $radius3

